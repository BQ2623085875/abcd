<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle" >

    <!-- 高度  此处设置宽度无效-->
    <size android:height="@dimen/dp_30"/>

    <corners android:radius="@dimen/dp_10"/>

    <padding android:right="@dimen/dp_5"
        android:left="@dimen/dp_5"/>

    <!-- 变化率 定义从左到右的颜色不变 -->
    <gradient
        android:endColor="@color/color_blue_dark"
        android:startColor="@color/color_blue_dark" />
</shape>